# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /javascriptRoutes      controllers.ContinentController.javascriptRoutes


#Controller for showing countries information

GET     /                                                           controllers.ContinentController.index()

GET     /getAllContinents                                           controllers.ContinentController.getAllContinents(message : String)

GET     /addContinent                                               controllers.ContinentController.addContinent()

+ nocsrf
POST    /createContinent                                            controllers.ContinentController.createContinent()

GET     /deleteContinent                                            controllers.ContinentController.deleteContinent(continentId : Int)

GET     /getCountriesOfContinent/:continentId/:continentName        controllers.ContinentController.getCountriesOfContinent(continentId : Int,continentName : String,message : String)

GET     /addCountryToContinent/:continentId/:continentName          controllers.ContinentController.addCountryToContinent(continentId : Int,continentName : String )

+ nocsrf
POST    /addCountryToContinent/:continentId/createCountry           controllers.ContinentController.createCountry(continentId : Int)

GET     /deleteCountry                                              controllers.ContinentController.deleteCountry(countryId : Int,continentId : Int,continentName : String)

GET     /getCitiesOfCountry/:countryId/:countryName                 controllers.ContinentController.getCitiesOfCountry(countryId : Int,countryName : String,message : String)

GET     /addCityToCountry/:countryId/:countryName                   controllers.ContinentController.addCityToCountry(countryId : Int,countryName : String)

+ nocsrf
POST    /addCityToCountry/:countryId/createCity                     controllers.ContinentController.createCity(countryId : Int )

GET     /deleteCity                                                 controllers.ContinentController.deleteCity(cityId : Int,countryId : Int,countryName : String)

GET     /getContinentOfCountry                                      controllers.ContinentController.getContinentOfCountry()

GET     /getContinent                                               controllers.ContinentController.getContinent(countryName: String)

GET     /getAllCitiesOfContinent                                    controllers.ContinentController.getAllCitiesOfContinent()

GET     /getAllCities                                               controllers.ContinentController.getAllCities(continentName : String)

GET     /checkTwoCountriesLiesInContinent                           controllers.ContinentController.checkTwoCountriesLiesInContinent()

GET     /countriesLieInContinent                                    controllers.ContinentController.countriesLieInContinent(firstCountry : String , secondCountry : String)

GET     /addCitiesToCountry                                         controllers.ContinentController.addCitiesToCountry()

+ nocsrf
POST    /createMultipleCities                                       controllers.ContinentController.createMultipleCities()

GET     /getGroupCities                                             controllers.ContinentController.getGroupCities()

GET     /getGroupedCities                                           controllers.ContinentController.getGroupedCities(cityName : Char)




